<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="5+5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btLimpar"
            android:layout_weight="3"
            style="@style/OperatorsButton"
            android:text="C"/>


        <Button
            android:id="@+id/divisao"
            style="@style/OperatorsButton"
            android:text="/"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero7"
            style="@style/NumbersButton"
            android:text="7"/>

        <Button
            android:id="@+id/numero8"
            style="@style/NumbersButton"
            android:text="8"/>

        <Button
            android:id="@+id/numero9"
            style="@style/NumbersButton"
            android:text="9"/>

        <Button
            android:id="@+id/multiplicacacao"
            style="@style/OperatorsButton"
            android:text="X"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero4"
            style="@style/NumbersButton"
            android:text="4"/>

        <Button
            android:id="@+id/numero5"
            style="@style/NumbersButton"
            android:text="5"/>

        <Button
            android:id="@+id/numero6"
            style="@style/NumbersButton"
            android:text="6"/>

        <Button
            android:id="@+id/subtracao"
            style="@style/OperatorsButton"
            android:text="-"/>


    </LinearLayout>

    /LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero1"
            style="@style/NumbersButton"
            android:text="1"/>

        <Button
            android:id="@+id/numero2"
            style="@style/NumbersButton"
            android:text="2"/>

        <Button
            android:id="@+id/numero3"
            style="@style/NumbersButton"
            android:text="3"/>

        <Button
            android:id="@+id/soma"
            style="@style/OperatorsButton"
            android:text="+"/>


    </LinearLayout>

    /LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ponto"
            style="@style/NumbersButton"
            android:text="."/>

        <Button
            android:id="@+id/numeroZero"
            style="@style/NumbersButton"
            android:text="0"/>

        <ImageView
            android:id="@+id/backspace"
            style="@style/NumbersButton"
            android:layout_height="102dp"
            android:scaleType="center"
            android:src="@drawable/img_1" />

        <Button
            android:id="@+id/subtracao"
            style="@style/OperatorsButton"
            android:text="-"/>


    </LinearLayout>


</LinearLayout>